@using Adoptrix.Contracts.Responses
@inject ImageUrlResolver ImageUrlResolver

<MudCard Style="width: 240px">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@($"fas fa-{Match.SpeciesName.ToLower()}")" Color="Color.Primary"/>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Match.Name</MudText>
            <MudText Typo="Typo.subtitle1">@Match.BreedName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Height="240" Image="@(ImageUrlResolver.GetPreviewUrl(Match.Id, Match.Image.Id))"/>
    <MudCardActions>
        <MudButton Href="@($"/animals/{Match.Id}")">View Details</MudButton>
        <MudSpacer></MudSpacer>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite"/>
    </MudCardActions>
</MudCard>

@code {

    [Parameter, EditorRequired] public required AnimalMatch Match { get; set; }

}
