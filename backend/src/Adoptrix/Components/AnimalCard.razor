@using Adoptrix.Application.Features.Animals.Responses

<MudCard Style="width: 240px">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudIcon Icon="@($"fas fa-{Result.SpeciesName.ToLower()}")" Color="Color.Primary"/>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Result.Name</MudText>
            <MudText Typo="Typo.subtitle1">@Result.BreedName</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardMedia Height="240" Image="@(Result.Image?.PreviewUrl)"/>
    <MudCardActions>
        <MudButton Href="@($"/animals/{Result.Id}")">View Details</MudButton>
        <MudSpacer></MudSpacer>
        <MudIconButton Icon="@Icons.Material.Filled.Favorite"/>
    </MudCardActions>
</MudCard>

@code {

    [Parameter, EditorRequired] public required SearchAnimalsResult Result { get; set; }

}
