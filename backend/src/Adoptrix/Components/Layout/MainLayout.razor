@inherits LayoutComponentBase
@inject AppNameProvider AppNameProvider

<MudThemingProvider Theme="theme" />
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="DrawerToggle" />
        <MudText Typo="Typo.h5" Class="ml-3">@AppNameProvider.AppName</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="isDrawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool isDrawerOpen;

    private readonly MudTheme theme = new()
    {
        Typography = new Typography
        {
            Default = new Default
            {
                FontFamily = ["Quicksand", "sans-serif"]
            }
        }
    };

    private void DrawerToggle()
    {
        isDrawerOpen = !isDrawerOpen;
    }
}
